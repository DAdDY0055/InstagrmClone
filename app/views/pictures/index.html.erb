<h1>投稿一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>画像</th>
    <th>コメント</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= image_tag picture.image.url %></td>
    <td><%= picture.content %></td>
    <td><%= picture.user.name %></td>
    <td><%= link_to '見る', picture_path(picture.id) %></td>
    <td><%= link_to '編集する', edit_picture_path(picture.id) %></td>
    <td><%= link_to '削除する', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
  </tr>
<% end %>
</table>

<%= link_to '新規投稿画面に戻る', new_picture_path %>