<h3>投稿一覧</h3>

<p><%= notice %></p>

<div class="container">
  <ul class="row">
    <% @pictures.each do |picture| %>
    <li class="col-md-4">
      <p><%= image_tag picture.image.url %></p>
      <p>コメント：<%= picture.content %></p>
      <p>投稿者  ：<%= picture.user.name %></p>
      <p class="btn btn-primary"><%= link_to '見る', picture_path(picture.id) %></p>
      <p class="btn btn-success"><%= link_to '編集する', edit_picture_path(picture.id) %></p>
      <p class="btn btn-danger"><%= link_to '削除する', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></p>
    </li>
    <% end %>
  </ul>
</div>

<%= link_to '新規投稿画面に戻る', new_picture_path %>