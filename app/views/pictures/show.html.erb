<h1>投稿詳細画面</h1>
<p>画像: <%= image_tag @picture.image.url %></p>
<p>コメント: <%= @picture.content %></p>
<p>
 <% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn-primary' %>
  <% end %>
<% end %>
</p>